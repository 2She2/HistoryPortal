@using HistoryPortal.Web.ViewModels.Articles
@model ArticlesViewModel

<div class="well">
    <h4>@Html.ActionLink(@Model.Title, "details", "articles", new { Model.Id }, null)</h4>
    <div><img src="#" alt="article image" /></div>
    <p style="word-wrap: break-word">
        @if (Model.Content.Length > 500)
        {
            @Html.Raw(Model.Content.Substring(0, 500) + "...")
        }
        else
        {
            @Html.Raw(Model.Content);
        }
    </p>
    <br />
    <p><strong>Category:</strong> @Model.Category.Name</p>
    <p class="pull-right"><strong>Date:</strong> @Model.CreatedOn</p>
    <br />
</div>