@using HistoryPortal.Web.InputModels.Articles
@model ArticleInputModel
@{
    ViewBag.Title = "Create Article";
}

@section upcomingEvents {
    <h3>
        @Html.ActionLink("Upcoming events", "Upcoming", "Events", new { area = "User" }, new { @class = "btn btn-danger btn-lg btn-block" })
    </h3>
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Create", "Articles", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "Article title" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Content)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Category)
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Submit article" class="btn btn-primary btn-lg" />
    </div>
}
