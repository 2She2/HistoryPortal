@using HistoryPortal.Web.Areas.User.InputModels.Events
@model EventsInputModel
@{
    ViewBag.Title = "Create Event";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Create", "Events", new { area = "User" }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Title, new { placeholder = "Event title" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Description)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, new { @class = "col-md-1 control-label" })
        <div class="col-md-11">
            @(Html.Kendo()
            .DateTimePickerFor(d => d.Date)
            .Value(DateTime.Now)
            .Min(DateTime.Now)
            .Max(DateTime.Now.AddYears(2)))
        </div>
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Create event" class="btn btn-primary btn-lg" />
    </div>
}
